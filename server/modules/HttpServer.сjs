const express = require("express");
const router = require("../routes/index.cjs");

const app = express();
app.use("/api", router);
app.use(express.json());
app.use(express.urlencoded());

const run = (port = 8080) => {
  app.listen(port);
  console.log(`Сервер запущен на ${port} порту`);
};

module.exports = { app, run };
